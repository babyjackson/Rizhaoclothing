}
.h-100{
  height: 100rpx;
}
.h-45{
  height: 45rpx;
}
.h-20{
  height: 20rpx;
}
.hh-15{
  background: #eeeeee;
  height: 15rpx;
}
.mebanw{
  position: relative;
  width: 750rpx;
  height: 365rpx;
}
.mebanw .bgban{
  height: 365rpx;
  width: 750rpx;
  background: #1bdacd;
}
.mebanw .bgban image{
  display: block;
  width: 750rpx;
  height: 365rpx;
}
.meban{
  position: absolute;
  height: 365rpx;
  width: 750rpx;
  top: 0;
  left: 0;
}
.avaUser{
  float: left;
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
  border: 5rpx solid #ffffff;
  overflow: hidden;
  margin-left: 50rpx;
}
.avaUser image{
  display: block;
  width: 165rpx;
  height: 165rpx;
}
.nick{
  float: left;
  font-size: 35rpx;
  color: #ffffff;
  margin-left: 45rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
}

.myorder .alldd{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.myorder .alldd .lab{
  font-size: 30rpx;
  color: #323232;
  line-height: 90rpx;
}
.myorder .alldd .ck{
  font-size: 24rpx;
  color: #7d7d7d;
  line-height: 90rpx;
}
.myorder .alldd .icor{
  width: 20rpx;
  height: 30rpx;
  margin: 30rpx 0 30rpx 5rpx;
}
.myorder .alldd .icor image{
  display: block;
  width: 20rpx;
  height: 30rpx;
}
.orderw{
  display: flex;
  padding: 0 20rpx;
  height: 185rpx;
}
.orderw .item{
  flex: 1;
  height: 185rpx;
}
.orderw .item .figure{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}
.orderw .item .figure image{
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.orderw .item .text{
  font-size: 25rpx;
  text-align: center;
  color: #717171;
  line-height: 35rpx;
}
.mustfun{
  display: flex;
  height: 175rpx;
}
.mustfun .item{
  flex: 1;
  height: 175rpx;
}
.mustfun .item .figure{
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}
.mustfun .item .figure image{
  display: block;
  width: 64rpx;
  height: 64rpx;
}
.mustfun .item .text{
  font-size: 26rpx;
  color: #403f3f;
  text-align: center;
  line-height: 35rpx;
}
.wsection{
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.wsection text{
  font-size: 26rpx;
  color: #403f3f;
  line-height: 100rpx;
}
.wsection .alt{
  width: 20rpx;
  height: 30rpx;
  margin: 35rpx 0 35rpx 0;
}
.wsection .alt image{
  display: block;
  width: 20rpx;
  height: 30rpx;
}