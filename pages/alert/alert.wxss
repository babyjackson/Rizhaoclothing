/* pages/alert/alert.wxss */
.h-50{
  height: 50rpx;
}
.h-40{
  height: 40rpx;
}
.h-25{
  height: 25rpx;
}
.h-35{
  height: 35rpx;
}
.line2{
  height: 2rpx;
  background: #d3d3d3;
}
.expand {
    position: fixed;
    height: 100%;
    z-index: 99;
}
.dropdown-bg {
    opacity: 0;
    transition: opacity linear 0.1s;
}

.expand .dropdown-bg {
    opacity: 1;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.dealertw{
  opacity: 0;
  height: 0;
  overflow: hidden;
  transition: opacity linear 0.1s;
}
.expand .dealertw{
  opacity: 1;
  position: absolute;
  width: 560rpx;
  height: 500rpx;
  margin-left: -280rpx;
  margin-top: -250rpx;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  background: #fff;
  z-index: 800;
  overflow: visible;
}
.dealert{
  position: relative;
  width: 470rpx;
  background: #fff;
  padding: 0 45rpx;
  height: 500rpx;
}
.dealert .tit{
  font-size: 38rpx;
  color: #1b1b1b;
  letter-spacing: 1rpx;
  line-height: 40rpx;
}
.dealert .com .logo{
  height: 85rpx;
  width: 85rpx;
  border-radius: 50%;
  overflow: hidden;
}
.dealert .com .logo image{
  display: block;
  width: 85rpx;
  height: 85rpx;
}
.dealert .com .cname{
  margin-left: 20rpx;
  width: 365rpx;
  max-height: 85rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 35rpx;
}
.dealert .openinfo{
  height: 64rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #787878;
  letter-spacing: 1rpx;
}
.dealert .openinfo .dian{
  font-weight: bold;
  font-size: 35rpx;
  color: #aaaaaa;
  line-height: 64rpx;
  margin-right: 25rpx;
}
.dealert .btn{
  height: 120rpx;
  margin-top: 30rpx;
}
.dealert .btn button{
  display: block;
  padding: 0;
  border: 0;
  background: rgba(0, 0, 0, 0);
  font-size: 26rpx;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.dealert .btn button::after{
  border: 0;
  border-radius: 0;
}
.dealert .btn .allow{
  color: #08a706;
}
.dealert .btn .refuse{
  color: #696969;
}